# Makefile for check_reflectance project

TARGET=check_reflectance
CXX=g++
CCFLAGS=-Wall -I/usr/include/gdal
LDFLAGS=-lgdal
CLEAN=rm -f

all: $(TARGET)

$(TARGET): $(TARGET).o
	$(CXX) $(LDFLAGS) -o ../../bin/$(TARGET) ../../obj/$(TARGET).o

$(TARGET).o: $(TARGET).cpp
	$(CXX) $(CCFLAGS) -o ../../obj/$(TARGET).o -c $(TARGET).cpp

clean:
	$(CLEAN) ../../obj/*.o ../../bin/$(TARGET)
